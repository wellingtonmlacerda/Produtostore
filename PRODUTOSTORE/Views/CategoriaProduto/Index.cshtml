@model IEnumerable<PRODUTOSTORE.Models.CategoriaProdutoModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Categoria de Produto</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastro</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Ativo</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Atualizar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Consultar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
